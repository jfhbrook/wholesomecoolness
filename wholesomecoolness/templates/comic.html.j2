{% block content %}
  {{ comic_nav }}
  {% if alert %}
    <p><b>{{ alert }}</b></p>
  {% endif %}
  {% block comic %}
    <img alt="Comic" border="0" src="{{ comic_url }}" width="650" height="787"><br>
  {% endblock %}
  {{ comic_nav }}
  <br>
  <br>

  <table width="760"><tr><td>
    <center>
      <hr>
      <b>Commentary:</b>
      <br><u><i>{{ posted_at }}</i></u><br>
    </center>

    {{ commentary }}

    <hr>
  </td></tr></table>
{% endblock %}
